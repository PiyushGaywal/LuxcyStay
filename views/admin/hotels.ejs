<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Hotels</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #000000;
        }

        h1, h2 {
            text-align: center;
            margin: 20px 0;
        }

        form {
            width: 400px;
            margin: 20px auto;
            display: flex;
            flex-direction: column;
            gap: 10px;
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        form input, form button {
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid #000000;
            background-color: #ffffff;
            color: #000000;
        }

        form button {
            cursor: pointer;
            background-color: yellow;
            font-weight: bold;
        }

        table {
            width: 80%;
            max-width: 800px;
            margin: 30px auto;
            border-collapse: collapse;
            background-color: #f9f9f9;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        table th, table td {
            border: 1px solid #000000;
            padding: 10px;
            text-align: center;
        }

        table th {
            font-weight: bold;
            background-color: #e0e0e0;
        }

        table tr:hover {
            background-color: #f0f0f0;
        }

        .delete-btn {
            background-color: #ff4d4d;
            color: #fff;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }

        .delete-btn:hover {
            background-color: #e60000;
        }
    </style>
</head>
<body>
    <%- include('../partials/admin-nav') %>

    <h1>Hotels</h1>

    <h2>Add New Hotel</h2>
    <form action="/admin/add-hotel" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Hotel Name" required>
        <input type="text" name="price" placeholder="Price per Night" required>
        <input type="file" name="image" accept="image/*" required>
        <button type="submit">Add Hotel</button>
    </form>

    <h2>Existing Hotels</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
        <% hotels.forEach(hotel => { %>
            <tr>
                <td><%= hotel.name %></td>
                <td>â‚¹<%= hotel.price %></td>
                <td>
                    <form action="/admin/delete-hotel/<%= hotel._id %>" method="POST">
                        <button type="submit" class="delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
