                        <div class="hotel-info">
                            <div class="hotel-name">Oberoy Hotel</div>
                            <div class="hotel-price">₹1100 / Night</div>
                            <input type="hidden" name="hotelName" value="Oberoy Hotel">
                            <input type="submit" value="Book" class="btn">
                        </div>
                    </div>
                </form>

                <form action="/select-hotel" method="POST">
                    <div class="hotel-card">
                        <img src="/images/hotel1.jpg" alt="Grand Palace">
                        <div class="hotel-info">
                            <div class="hotel-name">Grand Palace</div>
                            <div class="hotel-price">₹950 / Night</div>
                            <input type="hidden" name="hotelName" value="Grand Palace">
                            <input type="submit" value="Book" class="btn">
                        </div>
                    </div>
                </form>

                <form action="/select-hotel" method="POST">
                    <div class="hotel-card">
                        <img src="/images/hotel3.jpg" alt="Sea View Resort">
                        <div class="hotel-info">
                            <div class="hotel-name">Sea View Resort</div>
                            <div class="hotel-price">₹850 / Night</div>
                            <input type="hidden" name="hotelName" value="Sea View Resort">
                            <input type="submit" value="Book" class="btn">
                        </div>
                    </div>
                </form>

                <form action="/select-hotel" method="POST">
                    <div class="hotel-card">
                        <img src="/images/hotel4.jpg" alt="Mountain Lodge">
                        <div class="hotel-info">
